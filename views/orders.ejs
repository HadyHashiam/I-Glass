<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- bootstrap call -->
  <link href="css2/bootstrap.min.css" rel="stylesheet" />
  <script src="js2/bootstrap.bundle.js"></script>
  <!-- bootstrap call -->

  <!-- font-awesome CDN call  -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
  <!-- font-awseome CDN call -->

  <!-- Google font call -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Righteous&family=Russo+One&display=swap" rel="stylesheet" />
  <!-- Google font call -->

  <link rel="stylesheet" href="css/home.css" />

  <title>orders</title>

  <style>
    .product-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    .product-table th,
    .product-table td {
      border: 1px solid #143a6b;
      padding: 8px;
      text-align: left;
    }

    .product-table th {
      background-color: #f2f2f2;
    }

    .product-actions form {
      display: flex;
      gap: 5px;
    }

    .product-actions form button {
      flex: 1;
    }
  </style>
</head>
<body>
  <!-- Navigation bar -->
  <%- include('parts/navbar.ejs') %>
<div class="d-flex justify-content-start align-items-upper p-2 vh-100">
    <div class="container mt-5">
      <% if(items.length===0) { %>
        <p class="alert alert-danger">There are no items</p>
        <% } else { %>
          <table class="table table-bordered">
            <thead class="table-light">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Product name</th>
                <th scope="col">Price</th>
                <th scope="col">Address</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% for (let i=0; i < items.length; i++) { %>
                <tr>
                  <td>
                    <%= i+1 %>
                  </td>
                  <td>
                    <h6><%= items[i].name %></h6>
                  </td>
                  <td>
                    <h6><%= items[i].price %> $</h6>
                  </td>
                  <td>
                  <h6> <%= items[i].address %></h6>
                  </td>
                  <td>
                    <%= items[i].status %>
                  </td>
                  <td>
                    <form method="POST">
                      <input type="hidden" name="orderId" value="<%= items[i]._id %>">
                      <button type="submit" class="btn btn-danger" formaction="/orders/cancel">Cancel</button>
                    </form>
                  </td>
                </tr>
                <% } %>
            </tbody>
          </table>
          <% } %>
    </div>
</div>
    <!-- Footer -->
    <%- include('parts/footer.ejs') %>
</body>